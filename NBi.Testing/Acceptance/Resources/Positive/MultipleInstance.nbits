  </variables>
  <test name="Instances are defined through a single variable and an integer step" uid="0001">
    <instance-settling>
      <local-variable name="integer" type="numeric">
        <loop-sentinel seed="1" terminal="3" step="1"/>
      </local-variable>
    </instance-settling>
    <system-under-test>
      <resultSet file="~MyData_2016_0{@integer}.csv"/>
    </system-under-test>
    <assert>
      <no-rows>
        <predicate name="#0">
          <null/>
        </predicate>
      </no-rows>
    </assert>
  </test>
